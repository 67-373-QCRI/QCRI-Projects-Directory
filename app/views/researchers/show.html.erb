<div class="container" style="padding-top:3rem">
    <div class="main-body">

          <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
              <div class="card">
                <div class="card-body">
                  <div class="d-flex flex-column align-items-center text-center">
                    <img src="<%= rails_blob_path(@researcher.avatar, disposition: "attachment", only_path: true) %>" alt="Admin" class="rounded-circle" width="150">
                    <div class="mt-3">
                      <h4><%= @researcher.full_name %></h4>
                      <p class="text-secondary mb-1"><%= @researcher.job_title %></p>
                      <p class="text-muted font-size-sm"><%= @researcher.group %></p>
                    </div>
                  </div>
                </div>
              </div>
              <div class="card mt-3">
                <ul class="list-group list-group-flush">
                  <% unless @researcher.website_url.nil? %>
                    <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                      <h6 class="mb-0"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-globe mr-2 icon-inline"><circle cx="12" cy="12" r="10"></circle><line x1="2" y1="12" x2="22" y2="12"></line><path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path></svg>Website</h6>
                      <a href="<%= @researcher.website_url.nil? ? "#" : @researcher.website_url %>" class="text-secondary"><%= @researcher.website_url %></a>
                    </li>
                  <% end %>
                  <% unless @researcher.github_url.nil? %>
                    <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                      <h6 class="mb-0"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-github mr-2 icon-inline"><path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path></svg>Github</h6>
                      <a href="<%= @researcher.github_url.nil? ? "#" : @researcher.github_url %>" class="text-secondary"><%= @researcher.github_url %></a>
                    </li>
                  <% end %>
                </ul>
              </div>
              <div class="card mt-3">
                <div class="card-body">
                  <h5 class="card-title">Bio</h5>
                  <p class="card-text"><%= @researcher.bio %></p>
                </div>
              </div>
            </div>
            <div class="col-md-8">
              <div class="card mb-3">
                <div class="card-body">
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Full Name</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <%= @researcher.full_name %>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Email</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <%= @researcher.user.email %>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Phone</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <%= @researcher.phone_number %>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Office Location</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <%= @researcher.office_location %>
                    </div>
                  </div>
                  <hr>
                  <% if logged_in? && ((!(current_user.researcher.nil?) && (current_user.researcher.id == @researcher.id)) || current_user.admin?) %>
                    <div class="dropdown">
                      <% if logged_in? && current_user.admin? %>
                        <i class="material-icons" role="button" data-bs-toggle="dropdown" aria-expanded="false" >tune</i>
                        <ul class="dropdown-menu">
                          <li><%= link_to 'Edit Researcher', edit_researcher_path(@researcher), class: "dropdown-item" %></li>
                          <li><%= link_to 'Delete Researcher', researcher_path(@researcher), method: :delete, data: {confirm: "Are you sure you want to delete this researcher?"}, class: "dropdown-item" %></li>
                        </ul>
                      <% end %>
                    </div>
                  <% end %>
                </div>
              </div>

              <div class="row gutters-sm h-50" >
                <div class="col-sm-6 mb-3 h-100">
                  <% if @researcher.project_id.nil? %>
                    <div class="card h-50">
                      <div class="card-body">
                        <h5 class="card-title">Current Project</h5>
                        <p class="card-text"><%= @researcher.first_name.capitalize %> is not currently assigned to a project</p>
                      </div>
                    </div>
                  <% else %>
                    <div class="card">
                      <div class="card-body">
                        <h6 class="d-flex align-items-center mb-3">Current Project</h6>
                        <img src="<%= rails_blob_path(@researcher.project.image, disposition: "attachment", only_path: true) %>" width="150", height="150">
                        <div class="card-title">
                          <a href="<%= project_path(@researcher.project.id) %>"><h4><%= @researcher.project.name %></h4></a>
                        </div>
                      </div>
                    </div>
                  <% end %>
                </div>
                <div class="col-sm-6 mb-3 h-100 overflow-auto">
                  <% if @researcher.past_projects.empty? %>
                    <div class="card">
                      <div class="card-body">
                        <h5 class="card-title">Past Projects</h5>
                        <p class="card-text"><%= @researcher.first_name.capitalize %> does not have any past projects</p>
                      </div>
                    </div>
                  <% else %>
                    <% @researcher.past_projects.each do |project| %>
                      <div class="card">
                        <img src="<%= rails_blob_path(project.image, disposition: "attachment", only_path: true) %>" class="card-img-top" alt="...">
                        <div class="card-body">
                          <h5 class="card-title"><%= project.name %></h5>
                          <p class="card-text"><%= project.status %></p>
                          <a href="<%= project_path(project.id) %>" class="btn btn-primary">More Info</a>
                        </div>
                      </div>
                    <% end %>
                  <% end %>
                </div>
              </div>



            </div>
          </div>

        </div>
    </div>
