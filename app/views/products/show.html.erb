<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
<div class="container primary-content">
	<!-- PRIMARY CONTENT HEADING -->
	<div class="primary-content-heading clearfix">
    <div class="row">
      <div class="col-2">
    		<h2><%= @product.title %></h2>
      </div>
      <div class="col align-self-center">
        <div class="dropdown">
          <% if logged_in? && current_user.admin? %>
            <i class="material-icons" role="button" data-bs-toggle="dropdown" aria-expanded="false" >tune</i>
            <ul class="dropdown-menu">
              <li><%= link_to 'Edit Product', edit_product_path(@product), class: "dropdown-item" %></li>
              <li><%= link_to 'Delete Product', product_path(@product), method: :delete, data: {confirm: "Are you sure you want to delete this product?"}, class: "dropdown-item" %></li>
            </ul>
          <% end %>
        </div>
      </div>
    </div>
        <hr style="border:1px solid #fff">
    <img src="<%= rails_blob_path(@product.image, disposition: "attachment", only_path: true) %>" class="img-thumbnail" alt="..." style="width:50%;height:50%">

	</div>
	<!-- END PRIMARY CONTENT HEADING -->
	<div class="project-section general-info">
		<h3>General Info</h3>
		<p><%= @product.description %></p>
	</div>
  <h3> Related Project </h3>
  <div class="card" style="width: 15rem;">
    <img src="<%= rails_blob_path(@product.project.image, disposition: "attachment", only_path: true) %>" class="card-img-top" alt="...">
    <div class="card-body">
      <h5 class="card-title"><%= @product.project.name %></h5>
      <a href="<%= project_path(@product.project) %>" class="btn btn-outline-primary">Read More</a>
    </div>
  </div>
</div>
