<div class="row row-cols-1 row-cols-md-5 g-4">
  <% for project in @projects %>
    <div class="col-sm-6">
      <div class="card">
        <img src="<%= rails_blob_path(project.image, disposition: "attachment", only_path: true) %>" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title"><%= project.name %></h5>
          <h6 class="card-subtitle mb-2 text-muted"><%= project.leader_name %></h6>
          <p class="card-text-gradient overflow-hidden"><%= project.description %></p>
          <a href="<%= project_path(project.id) %>" class="btn btn-primary">Read More</a>
        </div>
      </div>
    </div>
  <% end %>
</div>
